{
  "name": "maud",
  "productName": "Maud",
  "description": "A small electron app to display Watson frame data",
  "version": "0.5.3",
  "author": "Mistress of Loft and Spire",
  "keywords": [
    "timertracker",
    "watson"
  ],
  "main": "./main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-flatpak": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/publisher-github": "^6.1.1",
    "electron": "18.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
	    "executableName": "maud"
	  },
      "makers": [
        {
			"name": "@electron-forge/maker-zip",
			"platforms": [
			  "win32", "darwin", "linux"
			]
		}
      ],
	  "electronPackagerConfig": {
		"executableName": "maud"
	  },
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "mistress-of-loft-and-spire",
              "name": "maud"
            }
          }
        }
      ]
    }
  }
}
